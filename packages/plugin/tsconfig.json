{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "DOM"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "noImplicitAny": false,
    "outDir": "lib",
    "strict": true,
    "typeRoots": ["../../node_modules/@types"]
  },
  "include": ["src/", "assets"],
  "exclude": ["node_modules", "lib", "__tests__"]
}
